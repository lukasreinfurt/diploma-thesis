<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin
	name="SimTech Bootware Eclipse Core Plugin"
	id="org.simtech.bootware.eclipse.core"
	version="0.0.1">

	<requires>
		<import plugin="org.eclipse.core.runtime"/>
		<import plugin="org.eclipse.ui"/>
	</requires>

	<extension-point
		id="org.simtech.bootware.eclipse.core"
		name="EP"
		schema="schema/org.simtech.bootware.eclipse.core.exsd"/>

	<extension
		point="org.eclipse.ui.actionSets">
		<actionSet
			label="Bootware Action Set"
			visible="true"
			id="org.simtech.bootware.eclipse.actionSet">
			<menu
				label="Bootware Menu"
				id="bootwareMenu">
				<separator
					name="bootwareGroup">
				</separator>
			</menu>
			<action
				label="Bootware Action"
				icon="icons/bootware.png"
				class="org.simtech.bootware.eclipse.core.actions.Test"
				tooltip="Bootware"
				menubarPath="bootwareMenu/bootwareGroup"
				toolbarPath="bootwareGroup"
				id="org.simtech.bootware.eclipse.core.actions.Test">
			</action>
		</actionSet>
	</extension>

</plugin>
