<!-- ${processName} BPEL Process [Generated by the Eclipse BPEL Designer]  -->
<!-- Date: ${date} -->

<bpel:process name="${processName}"
         targetNamespace="${namespace}"
         suppressJoinFailure="yes"
         xmlns:tns="${namespace}"
         xmlns:bpel="${bpelNamespace}"
         xmlns:procwsdl="${namespace}/wsdl"
         xmlns:simT="http://de.ustutt.simtech/bpel/extensions"
         xmlns:stdt="http://de.ustutt.simtech/datatypes"
         >
         
    <!-- Import the client WSDL -->
	<bpel:import location="${processName}Artifacts.wsdl" namespace="${namespace}/wsdl" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
	<!-- Import SimTech-specific datatypes -->
	<bpel:import location="simtech-datatypes.xsd" namespace="http://de.ustutt.simtech/datatypes"  
			importType="http://www.w3.org/2001/XMLSchema" />
	
	<!-- Define the used extensions -->
	<bpel:extensions>
        <bpel:extension namespace="http://de.ustutt.simtech/bpel/extensions" mustUnderstand="yes"/>
    </bpel:extensions>
	        
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!--
        The 'client' role represents the requester of this service. It is 
        used for callback. The location and correlation information associated
        with the client role are automatically set using WS-Addressing.
        -->
        <bpel:partnerLink name="client"
                     partnerLinkType="procwsdl:${processName}PLT"
                     myRole="${processName}Provider"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="procwsdl:${processName}RequestMessage"/>
                  
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requestor. 
             Note: This maps to operation defined in ${processName}.wsdl 
             -->
        <bpel:extensionActivity>
            <simT:simulationStartActivity name="simulationStart" partnerLink="client"
                 portType="procwsdl:${processName}PT"
                 operation="initiate" variable="input"
                 createInstance="yes"/>
        </bpel:extensionActivity>

    </bpel:sequence>
</bpel:process>

