<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>remote_bootware</id>

	<formats>
		<format>dir</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>

		<fileSet>
			<directory>../remote/target/lib</directory>
			<outputDirectory>bin/remote/lib</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>../mapping</directory>
			<outputDirectory>bin/remote/mapping</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>../remote/target</directory>
			<outputDirectory>bin/remote</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>

	</fileSets>

	<moduleSets>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware:bootware-remote</include>
			</includes>
			<binaries>
				<outputDirectory>bin/remote</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.resource:*</include>
			</includes>
			<binaries>
				<outputDirectory>bin/remote/plugins/resource</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.communication:*</include>
			</includes>
			<binaries>
				<outputDirectory>bin/remote/plugins/communication</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.application:*</include>
			</includes>
			<binaries>
				<outputDirectory>bin/remote/plugins/application</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.event:*</include>
			</includes>
			<binaries>
				<outputDirectory>bin/remote/plugins/event</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

	</moduleSets>

</assembly>
