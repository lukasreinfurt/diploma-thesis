<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>bin</id>

	<formats>
		<format>dir</format>
		<!-- <format>zip</format> -->
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>

		<fileSet>
			<directory>../core/target/lib</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>../local/target/lib</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>../remote/target/lib</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>../target/site</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>

	</fileSets>

	<moduleSets>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware:bootware-local</include>
			</includes>
			<binaries>
				<outputDirectory>/</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware:bootware-remote</include>
			</includes>
			<binaries>
				<outputDirectory>/</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.infrastructure:*</include>
			</includes>
			<binaries>
				<outputDirectory>plugins/infrastructure</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.connection:*</include>
			</includes>
			<binaries>
				<outputDirectory>plugins/connection</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.payload:*</include>
			</includes>
			<binaries>
				<outputDirectory>plugins/payload</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.simtech.bootware.plugins.event:*</include>
			</includes>
			<binaries>
				<outputDirectory>plugins/event</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>

	</moduleSets>

</assembly>
